{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noPropertyAccessFromIndexSignature": true,
    "paths": {
      "@config": [
        "./backend/src/config"
      ],
      "@@domain/*": [
        "./backend/src/domain/*"
      ],
      "@@router": [
        "./backend/src/router"
      ],
      "@project/backend": [
        "./backend/src/output/trpc-api.ts"
      ]
    }
  }
}