{
  "name": "cyia-web-template",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "init": "npm run build:dev -w define && npm run init -w backend",
    "build:dev": "npm run build:dev -ws --if-present",
    "build:define:watch": "npm run build:watch -w define",
    "start": "concurrently \"npm run build:dev -w backend\" \"npm run start -w website\"",
    "lint": "eslint --fix ./backend && prettier ./backend --write && eslint --fix ./website && prettier ./website --write && eslint --fix ./define && prettier ./define --write "
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "workspaces": [
    "./define",
    "./backend",
    "./website",
    "./ts-env"
  ],
  "devDependencies": {
    "@eslint/js": "9.30.1",
    "@types/eslint": "9.6.1",
    "@typescript-eslint/eslint-plugin": "8.14.0",
    "@typescript-eslint/parser": "8.14.0",
    "esbuild": "^0.25.9",
    "esbuild-plugin-clean": "^1.0.1",
    "esbuild-plugin-copy": "^2.1.1",
    "eslint": "9.30.1",
    "eslint-plugin-unused-imports": "4.1.4",
    "execa": "^9.6.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "8.14.0"
  },
  "dependencies": {
    "@trpc/client": "^11.4.2",
    "@trpc/server": "^11.4.2",
    "@valibot/i18n": "^1.0.0",
    "bcryptjs": "^3.0.2",
    "concurrently": "^9.1.2",
    "fast-equals": "^5.2.2",
    "valibot": "^1.1.0",
    "wait-on": "^8.0.3"
  }
